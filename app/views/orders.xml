<Alloy>
	<Collection src="orders"/>
	<Tab title="Orders" icon="images/orders.png">
		<Window title="LookManagers">
			<TableView name="ordersList" id="ordersList" dataCollection="orders" dataTransform="modelTransform">
				<TableViewRow class="orderRow">
					 <ImageView class="productImage" image="{imageUri}"></ImageView> 
					<View class="cHolder">
						<Label id="name" text="{name}" top="5" class="" />
						<Label id="customer" text="{customer}" top="5" class=""/>
						<Label id="price" text="{price}" class="" top="5" />
						<Label id="price" text="{current_state}" class="" top="5" />
					</View>
				</TableViewRow>
			</TableView>
		</Window>
	</Tab>
</Alloy>