<Alloy>
	<Window title="LookManagers" id="cWindow" modal="false">
		<ScrollView id="parentHolder">
			<View id="cHolder">
				<Label class="photo" text="Add Photo" />
					<Button id="photoUpload">Photo</Button>
					<View id="photoFrame" width="100" height="100">
						<ImageView width="auto" height="auto" image="images/no_photo.png" id="photo"></ImageView>
					</View>
				<Label  class="custName" text="Name"/>
				<TextField id="name"></TextField>
				<Label class="custGender" text="Gender"/>
				<View id="genderRadio" class="radioGroup"></View>
				<Label class="custCity" text="City" />
				<TextField id="city"></TextField>
				<Label class="custEmail" text="Email" />
				<TextField id="email"></TextField>
				<Label class="custPhone" text="Phone" />
				<TextField id="phone"></TextField>
				<Label class="custType" text="Customer Type"/>
				<View id="customerTypeRadio" class="radioGroup"></View>
				<Label class="custFacebookId" text="Facebook Id" />
				<TextField id="facebook_id"></TextField>
				<Label class="custDOB" text="Date of Birth" />
				<Picker id="datepicker" top="10"
				type="Ti.UI.PICKER_TYPE_DATE"
				minDate="1900,1,1"></Picker>
			</View>
			<Button id="saveCustomerButton">Save</Button>
		</ScrollView>
	</Window>
</Alloy>