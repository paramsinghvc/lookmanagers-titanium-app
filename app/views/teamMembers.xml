<Alloy>
	<Collection src="teamMembers"/>
	<Tab title="Team Members" id="teamMembersTab" icon="images/workers.png">
		<Window title="LookManagers">
			<TableView name="teamMembers" id="teamMembersList" dataCollection="teamMembers" dataTransform="modelTransform" onClick="teamMemberRowClick">
				<TableViewRow class="teamMemberRow">
					<ImageView class="productImage" image="{imageUri}"></ImageView>
					<View class="tmHolder">
						<Label id="name" text="{name}" top="5" class="name" />
						<Label id="city" text="{email}" top="5" class="email"/>
						<Label id="gender" text="{gender}" class="gender" top="5" />
						<Label id="phone" text="{phone}" class="gender" top="5" />
					</View>
				</TableViewRow>
			</TableView>
		</Window>
	</Tab>
</Alloy>