<Alloy>
	<Model src="customers" />
	<Window title="LookManagers" id="cWindow" modal="false">
		<View id="parentHolder">
			<View id="cHolder">
				<Label id="name" top="5" class="custName" />
				<Label id="gender" top="5" class="custGender" />
				<Label id="city" top="5" class="custCity"/>
				<Label id="email" top="5" class="custEmail"/>
				<Label id="phone" top="5" class="custPhone"/>
			</View>
			<Button id="editCustomerButton">Edit Customer</Button>
			<Button id="deleteCustomerButton">Delete Customer</Button>
		</View>
		<AlertDialog id="alertDialog"  message="Are you sure you want to delete this customer?" cancel="1">
			<ButtonNames>
				<ButtonName>Yes</ButtonName>
				<ButtonName>No</ButtonName>
			</ButtonNames>
		</AlertDialog>
	</Window>
</Alloy>